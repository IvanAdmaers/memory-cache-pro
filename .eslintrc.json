{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base",
        "plugin:jest/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-console": "off",
        "no-underscore-dangle": ["error", { "allowAfterThis": true }],
        "prefer-arrow-callback": [ "error", { "allowNamedFunctions": true } ],
        "import/extensions": [
            "error",
            {
                "js": "always"
            }
        ]
    }
}
